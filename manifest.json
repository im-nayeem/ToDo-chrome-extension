{
    "name": "My ToDo List",
    "version": "2.0.0",
    "description": "ToDo List Manager",
    "manifest_version": 3,
    "author": "Nayeem Hossain",
    "action":{
        "default_popup": "index.html",
        "default_title": "My ToDo List"
    },
    "permissions": [
        "storage",
        "notifications",
        "tabs"
      ],
      "host_permissions":[
        "http://127.0.0.1/*",
        "http://localhost/*"
      ],
      "background": {
        "service_worker": "service-worker.js",
        "type": "module"
      },
    "icons": {
        "16": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
      }
}